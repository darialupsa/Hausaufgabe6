<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.hausaufgabe6.HelloController"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label fx:id="Register" text="Give your ID and you CourseID:" />
    <TextField fx:id="StudentId"/>
    <TextField fx:id="CourseId"/>
    <Button text="Register To Course" onAction="#registrationForStudent"/>
    <Button text="Number Of Credits" onAction="#creditsNumber"/>
    <Label fx:id="Credits"/>

</VBox>
